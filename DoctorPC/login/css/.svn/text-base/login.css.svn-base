.login-div {
	float: right;
	height: 100%;
	width: 50%;
	margin-right: 0vw;
	FILTER: progid:DXImageTransform.Microsoft.Gradient(gradientType=0, startColorStr=rgba(97, 206, 228, 0.93), endColorStr=rgba(50, 115, 241, 0.93);
	/*IE*/
	background: -moz-linear-gradient(top, rgba(97, 206, 228, 0.93), rgba(50, 115, 241, 0.93)));
	/*火狐*/
	background: -webkit-gradient(linear, 0% 0%, 0% 100%, from(rgba(97, 206, 228, 0.93)), to(rgba(50, 115, 241, 0.93)));
	border-top-right-radius: 8px;
	border-bottom-right-radius: 8px;
}

.login-div input {
	border: 1px solid white;
	background-color: rgba(0, 0, 0, 0);
	color: white;
	border-radius: 20px;
	margin-left: 15vw;
	width: 210px;
	margin-top: 10px;
	height: 35px;
	font-size: 14px;
	padding-left: 20px;
	outline: none;
}

.login-div input:first-of-type {
	margin-top: 25px;
}

.login-div input::-webkit-input-placeholder {
	/* WebKit browsers */
	color: rgb(220, 238, 252);
}

.login-div input:-moz-placeholder {
	/* Mozilla Firefox 4 to 18 */
	color: rgb(220, 238, 252);
	opacity: 1;
}

.login-div input::-moz-placeholder {
	/* Mozilla Firefox 19+ */
	color: rgb(220, 238, 252);
	opacity: 1;
}

.login-div input:-ms-input-placeholder {
	/* Internet Explorer 10+ */
	color: rgb(220, 238, 252);
}

.login-div button {
	border: none;
	background-color: white;
	width: 220px;
	margin-left: 15vw;
	height: 40px;
	margin-top: 35px;
	border-radius: 20px;
	color: rgb(52, 138, 246);
	font-size: 16px;
}

.system-name-div {
	padding-left: 15vw;
	font-size: 16px;
	font-weight: bold;
	color: rgb(203, 231, 250);
	margin-top: 30vh;
}

.company-name-div {
	position: absolute;
	bottom: 7vh;
	padding-left: 15.5vw;
	color: rgb(220, 238, 252);
	font-size: 14px;
}

.mui-toast-container{
	position: fixed;
	left: 74.5vw;
	top: 60vh;
}
