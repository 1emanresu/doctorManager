#canvas,
#canvas2 {
	position: absolute;
	top: 0;
	left: 0;
}

#drayTool {
	text-align: center;
	height: 60px;
	display: flex;
	width: 650px;
	border: gainsboro solid 1px;
	padding: 5px 0;
	margin: 0 auto;
}

#size_thumb {
	background-color: #666;
	width: 15px;
	border-top-left-radius: 8px;
	border-top-right-radius: 8px;
	border-bottom-left-radius: 8px;
	border-bottom-right-radius: 8px;
	height: 15px;
	margin-top: -5px;
	position: absolute;
	left: 0px;
}

#size_span {
	border: 1px solid #999;
	margin-top: 5px;
	display: block;
	float: left;
	padding: 0 5px;
	position: relative;
	left: -30px;
	top: -12px;
}

#color_span {
	border: 1px solid #999;
	background-color: #00aeef;
	width: 15px;
	height: 15px;
	margin-top: 7px;
	display: block;
	float: left;
	margin-left: 10px;
}

#size_bar {
	width: 100px;
	height: 5px;
	background-color: #999;
	float: left;
	margin: 12px;
	position: absolute;
	display: none;
	right: 10px;
	cursor: pointer;
}

.span_color {
	cursor: pointer;
	width: 16px;
	height: 16px;
	float: left;
	margin: 2px 5px;
	padding: 1px;
	border: gainsboro solid 1px;
}

.span_color div {
	width: 100%;
	height: 100%;
}

.fontmei {
	color: #696969;
	font-size: 9px !important;
}

#drayTool img {
	cursor: pointer;
}

#drayTool button {
	background: #169BD5;
	padding: 0 15px;
	height: 21px;
	color: white;
	font-size: 12px !important;
	margin-bottom: 5px;
	position: relative;
	right: 10px;
}